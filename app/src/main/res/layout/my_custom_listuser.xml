<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/userhistdrname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userhistimage"
        android:textColor="@color/deeppurple"
        android:text="dr nmae"
        android:textSize="16sp"
        android:textStyle="normal"
        android:gravity="left"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/userhistdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userhistimage"
        android:textColor="@color/deeppurple"
        android:text="More Details"
        android:drawableRight="@drawable/ic_info_black_24dp"
        android:layout_below="@+id/userhistdrname"
        android:textSize="16sp"
        android:textStyle="normal"
        android:gravity="right"
        android:drawablePadding="5dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/userhistimage"
        android:layout_width="110dp"
        android:layout_height="120dp"
        />
    <TextView
        android:id="@+id/histfeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userhistimage"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/deeppurple"
        android:text="comment"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_comment_black_24dp"
        android:drawablePadding="2dp"
        android:textStyle="normal"
        android:gravity="left"
        android:paddingRight="15dp"/>

    <Button
        android:id="@+id/userhistcancelappt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/userhistimage"
        android:layout_toRightOf="@+id/userhistimage"
        android:background="@drawable/mybutton"
        android:text="cancle the appointment"
        android:layout_marginLeft="10dp"
        />
</RelativeLayout>