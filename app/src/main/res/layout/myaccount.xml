<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color">

    <ImageView
        android:id="@+id/usericon"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="98dp"
        android:layout_marginRight="98dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/ic_account_circle_black_24dp" />
    <TextView
        android:id="@+id/user11"
        android:layout_below="@+id/usericon"
        android:text="User name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <RelativeLayout
        android:id="@+id/userinfo"
        android:layout_below="@+id/user11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forreadling"
        android:paddingLeft="5dp"
        android:layout_margin="10dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/useremailtext"
        android:text="User email address"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:paddingLeft="20dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:gravity="left">
    </TextView>
    <View
        android:id="@+id/v1"
        android:layout_below="@id/useremailtext"
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@drawable/mybutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userphonetext"
        android:layout_below="@+id/v1"
        android:text="Mobile no:"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textSize="16sp"
        android:gravity="left">
    </TextView>
        <View
            android:id="@+id/v2"
            android:layout_below="@id/userphonetext"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:background="@drawable/mybutton" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/useraddress"
        android:layout_below="@+id/v2"
        android:text="Address:"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textSize="16sp"
        android:gravity="left">
    </TextView>
        <View
            android:id="@+id/v3"
            android:layout_below="@id/useraddress"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:background="@drawable/mybutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/urgender"
        android:layout_below="@+id/v3"
        android:text="Gender:"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginBottom="10dp">
    </TextView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userinfo"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="0dp"
        android:background="#00FCFCFC"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/singoutbtnaccount"
            android:layout_width="282dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/mybutton"
            android:padding="3dp"
            android:text="@string/logoutacount"
            android:textColor="@color/white_greyish"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
